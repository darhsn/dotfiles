#!/bin/bash

alias l="exa -lh"
alias lh="exa -lah"

alias mk="mkdir -p"
alias t="touch"
alias rm="rm -r"

alias g="grep --color=auto"
alias m="less"

alias c="cd"
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"

alias cl="clear"
alias cls="clear && l"
alias clh="clear && lh"

alias sd="mkdir -p ~/sd && sudo mount /dev/mmcblk0 ~/sd && cd ~/sd"
alias usd="sudo umount ~/sd && rm -rf ~/sd"

alias vi="nvim"

alias aliasrc="vi \"$HOME/dotfiles/.aliasrc\""
alias bashrc="vi \"$HOME/dotfiles/.bashrc\""
alias nvimconf="vi \"$HOME/dotfiles/nvim/init.vim\""

alias code="c ~/Code"
alias dotfiles="c ~/dotfiles/"
alias scripts="c ~/Code/Scripts"

alias rxmon="xrandr --output VGA-1 --auto --right-of LVDS1"
alias rxmon_off="xrandr --output VGA-1 --off"

# vim: ft=sh
