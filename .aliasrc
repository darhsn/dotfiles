#!/bin/bash

alias l="exa -lh"
alias lh="exa -lah"

alias mk="mkdir -p"
alias t="touch"
alias rm="rm -r"

alias g="grep --color=auto"
alias m="less"

alias c="cd"
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"

alias cl="clear"
alias cls="clear && l"
alias clh="clear && lh"

alias e="nvim"

alias aliasrc="e \"$HOME/dotfiles/.aliasrc\""
alias bashrc="e \"$HOME/dotfiles/.bashrc\""
alias nvimconf="e \"$HOME/dotfiles/nvim/init.vim\""

alias code="c ~/Code"
alias dotfiles="c ~/dotfiles/"
alias scripts="c ~/Code/Scripts"

alias rxmon="xrandr --output VGA1 --auto --right-of LVDS1"
alias rxmon_off="xrandr --output VGA1 --off"

# vim: ft=sh
