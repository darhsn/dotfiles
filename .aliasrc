#!/bin/bash

alias l="exa -l"
alias lh="exa -la"

alias mk="mkdir -p"
alias rm="rm -r"

alias c="cd"
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"

alias cl="clear"
alias cls="clear && l"
alias clh="clear && lh"

alias e="nvim"

alias aliasrc="e \"$HOME/Code/dotfiles/.aliasrc\""
alias bashrc="e \"$HOME/Code/dotfiles/.bashrc\""
alias nvimconf="e \"$HOME/Code/dotfiles/nvim/init.vim\""

alias code="c ~/Code"

