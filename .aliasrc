#!/bin/bash

alias ls="exa -lh"
alias lt="exa -lh --tree"
alias lh="exa -lah"

alias mkdir="mkdir -p"
alias rm="rm -r"

alias grep="grep --color=auto"

alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"

alias cls="clear && ls"
alias clh="clear && lh"
alias clt="clear && lt"

alias sd="mkdir -p ~/sd && sudo mount /dev/mmcblk0 ~/sd && cd ~/sd"
alias usd="sudo umount ~/sd && rm -rf ~/sd"

alias vi="nvim"

alias aliasrc="vi \"$HOME/dotfiles/.aliasrc\""
alias bashrc="vi \"$HOME/dotfiles/.bashrc\""

alias code="cd ~/Code"
alias dotfiles="cd ~/dotfiles/"
alias scripts="cd ~/Code/Scripts"

alias rxmon="xrandr --output VGA-1 --auto --right-of LVDS-1"
alias rxmon_off="xrandr --output VGA-1 --off"

# vim: ft=sh
