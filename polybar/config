module-margin-right = 1
font-0 = "Mononoki Nerd Font:pixelsize=11"
font-1 = "Mononoki Nerd Font:pixelsize=11"
font-2 = "Mononoki Nerd Font:pixelsize=11"

[bar/primary]
inherit = template
monitor = LVDS1
modules-left = workspaces
modules-center = time
modules-right = pulseaudio keyboard wlan battery

[bar/secondary]
inherit = template
monitor = VGA1
modules-left = workspaces
modules-center = time
modules-right = pulseaudio keyboard wlan battery

[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format =  <label-indicator><label-layout>
label-indicator = %{F#ff4d4d}
label-layout =   %layout%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected =   <label-connected>
label-connected = %essid%
format-disconnected = 睊 <label-disconnected>
label-disconnected = no conn

[module/time]
type = internal/date
interval = 5
date =  %I:%M%p

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

label-muted = ﱝ muted
label-muted-foreground = ${colors.muted}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
