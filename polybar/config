background-alt = #ff4d4d
muted = #928374
urgent = #cc241d
accent = #32302f
primary = #458588

[template]
width = 100%
height = 25
fixed-center = true
override-redirect = false
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 1
margin-top = 0
margin-bottom = 0
