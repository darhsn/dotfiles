[colors]
background = #000000
foreground = #ABB2BF
muted = #585858
urgent = #E06C75
primary = #61AFEF

[template]
width = 100%
height = 25
fixed-center = true
override-redirect = false
background = ${colors.background}
foreground = ${colors.foreground}
padding-left = 0
padding-right = 1
margin-top = 0
margin-bottom = 0
module-margin-left = 1
module-margin-right = 1
font-0 = "Fira Mono Nerd Font:pixelsize=9"

[bar/primary]
inherit = template
monitor = LVDS-1
modules-left = keyboard wlan pulseaudio
modules-center = workspaces
modules-right = battery time

[bar/secondary]
inherit = template
monitor = VGA-1
modules-left = workspaces
modules-right = pulseaudio keyboard wlan battery time

[module/keyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
format =  <label-indicator><label-layout>
label-indicator = %{F#ab4642}
label-layout = " "

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 5
format-connected = %{F#61AFEF}
format-disconnected = %{F#ab4642}睊

[module/time]
type = internal/date
interval = 5
date = %{F#ab4642} %{F#ABB2BF} %I:%M %p

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%

label-muted = ﱝ
label-muted-foreground = ${colors.muted}

ramp-volume-0 = 
ramp-volume-1 = %{F#E5C07B}
ramp-volume-2 = %{F#E06C75}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 98
format-charging = %{F#E5C07B} <label-charging>
format-discharging = <ramp-capacity>  <label-discharging>
format-full = %{F#E5C07B} <label-full>
ramp-capacity-0 = %{F#E06C75}
ramp-capacity-1 = %{F#86c1b9}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/workspaces]
type = internal/xworkspaces

icon-default = 

pin-workspaces = false
enable-click = true
enable-scroll = false

format = <label-state>

label-active = " %icon% "
label-active-foreground = ${colors.primary}
label-active-background = ${colors.background}
label-occupied = " %icon% "
label-occupied-foreground = ${colors.foreground}
label-urgent = " %icon% "
label-urgent-foreground = ${colors.urgent}
label-urgent-background = ${colors.background}
label-empty = " %icon% "
label-empty-foreground = ${colors.muted}


[module/i3]
type = internal/i3
wrapping-scroll = false
